<%= simple_form_for(@campervan) do |f| %>
  <%= f.label :title %>
  <%= f.input_field :title %>
  <%= f.label :description %>
  <%= f.input_field :description %>
  <%= f.association :brand %>
  <%= f.association :model %>
  <%= f.label :location %>
  <%= f.input_field :location %>
  <%= f.label :capacity %>
  <%= f.input_field :capacity %>
  <%= f.label :price %>
  <%= f.input_field :price %>
  <%= f.input :photos, as: :file %>
  <%= f.submit 'Save' %>
<% end %>
