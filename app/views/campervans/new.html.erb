<%= simple_form_for(@campervan) do |f| %>
  <%= f.label :title %>
  <%= f.input_field :title %>
  <%= f.label :description %>
  <%= f.input_field :description %>
  <%= f.input :brand, collection: ['VW', 'BMW'] %>
  <%= f.input :model, collection: ['Fiesta', 'BMW'] %>
  <%= f.label :capacity %>
  <%= f.input_field :capacity %>
  <%= f.label :price %>
  <%= f.input_field :price_per_night %>
  <%= f.input :photos, as: :file %>
  <%= f.submit 'Save' %>
<% end %>
