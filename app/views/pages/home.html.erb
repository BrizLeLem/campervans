<%= render "shared/banner" %>
<div class="search-bar">
  <div class="container search-bar-home">
  <%= simple_form_for :search, url: campervans_path, method: :get do |f| %>
    <%= f.input :city %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :brand, collection: ['Volkswagen', 'Nissan', 'Mercedes', 'Ford', 'Honda', 'Toyota'] %>
    <%= f.submit class: "btn" %>
  <% end %>
  </div>
</div>

<div class="container my-4">
  <div class="cards justify-content-between my-4" >
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1540224485413-4c7939106f3a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60)">
      Berlin
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1587226008387-636795e5aa72?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80)">
      Rennes
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1481141373687-f63a2873d0be?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80)">
      Boulder
    </div>
  </div>
</div>
